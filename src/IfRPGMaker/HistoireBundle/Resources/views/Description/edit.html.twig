{% extends "::base.html.twig" %}
{% block title %}{{ parent() }}{% endblock %}
{% block titre %} Description Editer {% endblock %}
{% block body %}
    {{ parent() }}
    <section>

    <form action="{{ path('description_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Editer</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('description') }}">
                Retour
            </a>
        </li>
        <li>
            <form action="{{ path('description_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Supprimer</button>
            </form>
        </li>
    </ul>
    </section>
{% endblock %}