{% extends "::base.html.twig" %}
{% block title %}{{ parent() }}{% endblock %}
{% block titre %} Evenement list {% endblock %}
{% block body %}
{{ parent() }}
    <section>
         <ul>
            <li>
                <a href="{{ path('evenement_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Intro</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('intro_show', { 'id': entity.intro}) }}">{{ entity.intro }}</a></td>
                    <td><a href="{{ path('description_show', { 'id': entity.description}) }}">{{ entity.description }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('evenement_show', { 'intro': entity.intro , 'description': entity.description }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('evenement_edit', { 'intro': entity.intro , 'description': entity.description }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3">Aucun evenement trouv&eacute;e</td></tr>
            {% endfor %}
            </tbody>
        </table>   
    </section>
{% endblock %}