{% extends "ActionsBundle::base.html.twig" %}

{% block title %}{{parent()}}{% endblock %}

{% block titre %} Actions list {% endblock %}

{% block body %}  
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Action</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('actions_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.action }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('actions_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('actions_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('actions_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}