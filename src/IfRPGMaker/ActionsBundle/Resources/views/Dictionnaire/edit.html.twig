{% extends "ActionsBundle::base.html.twig" %}

{% block title %}{{parent()}}{% endblock %}

{% block titre %} Dictionnaire edit {% endblock %}

{% block body %}

<form action="{{ path('dictionnaire_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('dictionnaire') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('dictionnaire_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
