choix:
    pattern:  /
    defaults: { _controller: "HistoireBundle:Choix:index" }

choix_show:
    pattern:  /{id}/show
    defaults: { _controller: "HistoireBundle:Choix:show" }

choix_new:
    pattern:  /new
    defaults: { _controller: "HistoireBundle:Choix:new" }

choix_create:
    pattern:  /create
    defaults: { _controller: "HistoireBundle:Choix:create" }
    requirements: { _method: post }

choix_edit:
    pattern:  /{id}/edit
    defaults: { _controller: "HistoireBundle:Choix:edit" }

choix_update:
    pattern:  /{id}/update
    defaults: { _controller: "HistoireBundle:Choix:update" }
    requirements: { _method: post }

choix_delete:
    pattern:  /{id}/delete
    defaults: { _controller: "HistoireBundle:Choix:delete" }
    requirements: { _method: post }
