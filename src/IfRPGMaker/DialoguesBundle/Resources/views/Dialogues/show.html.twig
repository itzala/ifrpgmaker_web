{% extends "DialoguesBundle::base.html.twig" %}

{% block title %}{{parent()}}{% endblock %}

{% block titre %} Dialogues {% endblock %}

{% block body %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Dialogues</th>
            <td>{{ entity.dialogues }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('dialogues') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('dialogues_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('dialogues_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}