{% extends "SystemeJeuBundle::base.html.twig" %}

{% block title %}{{parent()}}{% endblock %}

{% block titre %} Classe edit {% endblock %}

{% block body %}
<form action="{{ path('classe_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('classe') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('classe_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}